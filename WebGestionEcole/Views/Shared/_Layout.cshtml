<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGestionEcole</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebGestionEcole.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <aside id="sidebar"
            class="fixed top-0 left-0 z-40 w-64 h-screen bg-gray-200 text-gray-800 transition-transform duration-300 ease-in-out sm:translate-x-0">
            <div class="flex flex-col h-full px-4 py-6 overflow-hidden">
                <!-- Logo / Titre -->
                <div class="flex items-center justify-center mb-8">
                    <svg class="w-10 h-10 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                        viewBox="0 0 24 24">
                        <path
                            d="M12 0C5.372 0 0 5.373 0 12c0 6.628 5.372 12 12 12s12-5.372 12-12C24 5.373 18.628 0 12 0zM12 22C6.486 22 2 17.514 2 12S6.486 2 12 2s10 4.486 10 10-4.486 10-10 10z" />
                        <path d="M12 5a7 7 0 100 14 7 7 0 000-14zM12 21a9 9 0 110-18 9 9 0 010 18z" />
                    </svg>
                    <span class="ml-3 text-xl font-bold">Superfly School</span>
                </div>
                <!-- Menu -->
                <ul class="flex-1 space-y-4">
                    <li>
                        <a href="#"
                            class="flex items-center p-2 text-gray-800 rounded-lg hover:bg-gray-300 transition duration-300">
                            <svg class="w-6 h-6 text-gray-600 transition duration-75 group-hover:text-gray-800"
                                xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
                                <path
                                    d="M16.975 11H10V4.025a1 1 0 0 0-1.066-.998 8.5 8.5 0 1 0 9.039 9.039.999.999 0 0 0-1-1.066h.002Z" />
                                <path
                                    d="M12.5 0c-.157 0-.311.01-.565.027A1 1 0 0 0 11 1.02V10h8.975a1 1 0 0 0 1-.935c.013-.188.028-.374.028-.565A8.51 8.51 0 0 0 12.5 0Z" />
                            </svg>
                            <span class="ml-3">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Cours/Index"
                            class="flex items-center p-2 text-gray-800 rounded-lg hover:bg-gray-300 transition duration-300">
                            <svg class="w-6 h-6 text-gray-600 transition duration-75 group-hover:text-gray-800"
                                xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 18">
                                <path
                                    d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z" />
                            </svg>
                            <span class="ml-3">Liste Cours</span>
                            <span
                                class="ml-auto inline-flex items-center justify-center px-2 py-0.5 text-xs font-medium text-gray-800 bg-gray-300 rounded-full">Pro</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Absence/Index"
                            class="flex items-center p-2 text-gray-800 rounded-lg hover:bg-gray-300 transition duration-300">
                            <svg class="w-6 h-6 text-gray-600 transition duration-75 group-hover:text-gray-800"
                                xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path
                                    d="m17.418 3.623-.018-.008a6.713 6.713 0 0 0-2.4-.569V2h1a1 1 0 1 0 0-2h-2a1 1 0 0 0-1 1v2H9.89A6.977 6.977 0 0 1 12 8v5h-2V8A5 5 0 1 0 0 8v6a1 1 0 0 0 1 1h8v4a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-4h6a1 1 0 0 0 1-1V8a5 5 0 0 0-2.582-4.377ZM6 12H4a1 1 0 0 1 0-2h2a1 1 0 0 1 0 2Z" />
                            </svg>
                            <span class="ml-3">Liste Absence</span>
                            <span
                                class="ml-auto inline-flex items-center justify-center w-3 h-3 text-xs font-medium text-blue-800 bg-blue-100 rounded-full">3</span>
                        </a>
                    </li>  
                </ul>
            </div>
        </aside>

        <!-- Header -->
        <header class="fixed top-0 left-64 right-0 bg-white shadow-md z-50">
            <div class="flex justify-between items-center p-4 max-w-7xl mx-auto">
                <h1 class="text-2xl font-bold">Superfly School</h1>
            </div>
        </header>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
